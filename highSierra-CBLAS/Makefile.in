#
# Makefile.LINUX
#
#
# If you compile, change the name to Makefile.in.
#
#
 
#-----------------------------------------------------------------------------
# Shell
#-----------------------------------------------------------------------------

SHELL = /bin/sh

#-----------------------------------------------------------------------------
# Platform
#-----------------------------------------------------------------------------

PLAT = LINUX

#-----------------------------------------------------------------------------
# Libraries and includes
#-----------------------------------------------------------------------------
 
BLLIB = ../lib/blas_LINUX.a
CBLIB = ../lib/cblas_$(PLAT).a

#-----------------------------------------------------------------------------
# Compilers
#-----------------------------------------------------------------------------
# Flags for Compilers
#-----------------------------------------------------------------------------

CC = cc
CFLAGS = -Ofast -DADD_ -march=native -ffast-math -Ofast -fno-signed-zeros -ffp-contract=fast -mmmx -msse -maes 

FC = gfortran
FFLAGS = -march=native -ffast-math -Ofast -fno-signed-zeros -ffp-contract=fast -mmmx -msse -maes

LOADER = $(FC)

#-----------------------------------------------------------------------------
# Archive programs and flags
#-----------------------------------------------------------------------------

ARCH = ar
ARCHFLAGS = cr
RANLIB = ranlib
